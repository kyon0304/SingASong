<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Say a Song" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script>
        if (typeof window.jQuery == 'undefined') {
            document.write('<script src="javascripts/jquery/dist/jquery.js">\x3C/script>')
        }
    </script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/camanjs/4.1.2/caman.full.min.js" type="text/javascript"></script>
    <script>
        if (typeof window.Caman == 'undefined') {
            document.write('<script src="javascripts/caman/dist/caman.min.js">\x3C/script>')
        }
    </script>
    <%= javascript_include_tag  "all" %>
    <link rel="shortcut icon" href="/images/favicon.ico">
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
